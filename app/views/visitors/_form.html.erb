  <%= simple_form_for(@visitor) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.association :status, label: 'Status', collection: Status.order('"order"'), :include_blank => false%>
      <%= f.association :user, label: 'Assigned User'%>
    </div>
    <br>
    <div class="form-actions btn-group">
      <%= f.button :submit, :value => "Submit", :class => 'btn btn-primary' %>
      <%= link_to 'Back', visitors_path, :class => 'btn btn-default' %>
    </div>
  <% end %>
