<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="btn-group">
        <%= link_to 'Add New User', new_user_path, :class => "btn btn-default" if admin? %>
      </div>
    </div>
  </div>
</div>
