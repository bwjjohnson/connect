<%= simple_form_for(@email_template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body, :input_html => { :rows => 10, :cols => 80 } %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
<br>
